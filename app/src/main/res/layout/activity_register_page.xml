<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">



    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvAppName"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/avatar_profile"/>


    <ImageButton
        android:id="@+id/btnUploadProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgProfile"
        android:layout_centerHorizontal="true"
        android:src="@drawable/replace"
        android:background="@color/primary_background"/>

    <EditText
        android:id="@+id/etRegisterUsername"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:hint="Username"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_below="@id/imgProfile"
        android:background="@drawable/text_border"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:autofillHints="name" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_below="@id/etRegisterUsername"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_border"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textAlignment="center"
        android:inputType="textVisiblePassword"
        android:layout_below="@id/etRegisterEmail"
        android:background="@drawable/text_border"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etRegisterPassword"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:background="@drawable/button_border"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

</RelativeLayout>
